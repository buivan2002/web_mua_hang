<body>
    <div class="app">
        {{#if isLoggedIn}} <!-- Kiểm tra xem người dùng đã đăng nhập hay chưa -->
                {{> header_login}} <!-- Header cho người dùng đã đăng nhập -->
            {{else}}
                {{> header}} <!-- Header cho người dùng chưa đăng nhập -->
        {{/if}}

        <div class="containers">
            {{{body}}} <!-- Nội dung chính của trang -->
        </div>

        {{> fooder}} <!-- Gọi footer ở đây -->
    </div>

